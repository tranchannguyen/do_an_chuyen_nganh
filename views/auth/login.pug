extends ../layouts/commit

block content

	h1 Đăng nhập
	if errors
		each error in errors
			.alert.alert-danger= error

	form(method="POST")
		.form-group
		label(for="email") Email
		input#email.form-control(type="text",name="email",value = value ? values.email : "")
		.form-group
		label(for="password") Password
		input#password.form-control(type="password",name="password",value = value ? values.phone : "")

		button.btn.btn-success.mt-5 Login