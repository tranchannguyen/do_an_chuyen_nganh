  // Font Icon
  link(rel='stylesheet', href='/userG/fonts/material-icon/css/material-design-iconic-font.min.css')
  // Main css
  link(rel='stylesheet', href='/userG/css/style.css')
.main
  // Sign up form
  section.signup
    .container
      .signup-content
        .signup-form
          if success
              h3.alert.alert-danger= success
              a.btn(href='/login') Login now
          h2.form-title Sign up
          form#register-form.register-form(action="/register",method='POST')
            .form-group
              label(for='name')
                i.zmdi.zmdi-account.material-icons-name
              input#name(type='text', name='name', placeholder='Your Name')
            .form-group
              label(for='email')
                i.zmdi.zmdi-email
              input#email(type='email', name='email', placeholder='Your Email')
            .form-group
              label(for='pass')
                i.zmdi.zmdi-lock
              input#pass(type='password', name='pass', placeholder='Password')
            .form-group
              label(for='re-pass')
                i.zmdi.zmdi-lock-outline
              input#re_pass(type='password', name='re_pass', placeholder='Repeat your password')
            .form-group
              input#agree-term.agree-term(type='checkbox', name='agree-term')
              label.label-agree-term(for='agree-term')
                span
                  span
                | I agree all statements in  
                a.term-service(href='#') Terms of service
            .form-group.form-button
              input#signup.form-submit(type='submit', value='Register')
        .signup-image
          figure
            img(src='/userG/images/signup-image.jpg', alt='sing up image')
          a.signup-image-link(href='/login') I am already member
