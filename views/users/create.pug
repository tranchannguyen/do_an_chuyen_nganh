extends ../layouts/commit

block content

	h1 Create User
	if errors
		each error in errors
			.alert.alert-danger= error

	form(action="/users/create",method="POST",enctype="multipart/form-data")
		.form-group
		label(for="name") Name
		input#name.form-control(type="text",name="name",value = value ? values.name : "")
		.form-group
		label(for="phone") Phone
		input#phone.form-control(type="text",name="phone",value = value ? values.phone : "")
		.form-group
		label(for="avatar") Avatar 
		input#avatar.form-control-file(type="file",name="avatar")

		button.btn.btn-success.mt-5 Create