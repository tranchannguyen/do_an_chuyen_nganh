extends ../layouts/commit
block content
		h1 Danh s√°ch user
		.d-flex.align-items-center
			a.btn.btn-success.mt-5.mb-5(href="/users/create") Create

			form.ml-auto(action="/users/search",menthod ="GET",class= "d-flex") 
				input(type="text",name="q",class="form-control ")
				button(class="btn btn-primary ml-2") Search
		table.table
			tr
				th Name
				th Avatar
				th Phone
				th Action

			each user in users
				tr
					td= user.name
					td
						img(src=user.avatar, width="64",height ="64")
					td= user.phone
					td
						a.btn.btn-success(href='/users/'+user._id) View
						span 
						a.btn.btn-info(href='/users/'+user._id) Edit
						span 
						a.btn.btn-danger(href='/users/'+user._id) Delete
