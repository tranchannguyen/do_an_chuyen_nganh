extends ../layouts/commit
block content
    #page-wrapper(style='min-height: 616px;')
        .main-page
            .forms
                .row
                    each product in products
                        h3.title1 Thông tin product
                        .form-three.widget-shadow
                            if errors
                                each error in errors
                                    .alert.alert-danger= error
                            form.form-horizontal(method='POST',action="/products/edits/"+product._id)
                                    .form-group
                                        label.col-sm-2.control-label(for="avatar") Anh san pham
                                        .col-sm-1
                                        img.border.border-success.rounded-lg(src= product.pro_images[0], width="194",height ="194")
                                    .form-group
                                        label.col-sm-2.control-label(for="name") Product Name 
                                        .col-sm-5
                                            input#name.form-control.input-sm( type="text",name="name",value = product.name)
                                    .form-group
                                        label.col-sm-2.control-label(for="danhmuc") Name Category
                                        .col-sm-9
                                            select(name="idCate", type='text')
                                                each cate in category
                                                    if(cate._id==product.idCate)
                                                        option(value=cate._id,selected='')= cate.name
                                                    else
                                                        option(value=cate._id)= cate.name
                                               
                                    .form-group
                                        label.col-sm-2.control-label(for="price") Gia
                                        .col-sm-5
                                            input#price.form-control(type="number",name="price",value = product.price)
                                    .form-group
                                        label.col-sm-2.control-label(for="price") brand
                                        .col-sm-5
                                            input#brand.form-control(type="text",name="brand",value = product.brand)
                                    .form-group
                                        label.col-sm-2.control-label(for="sales") Giảm giá
                                        .col-sm-5
                                            input#sales.form-control(type="number",name="sales",value = product.isSale.percent || 0)
                                    .form-group
                                        label.col-sm-2.control-label(for="sales") Ngày kết thúc 
                                        .col-sm-5
                                            input#sales.form-control(type="datetime-local",name="endsale",value = product.isSale.end)
                                    .form-group
                                        label.col-sm-2.control-label(for="quantity") So luong
                                        .col-sm-5
                                            input#quantity.form-control(type="number",name="quantity",value= product.quantity)
                                    .form-group
                                        label.col-sm-2.control-label(for="description") Mo ta
                                        .col-sm-5
                                            input#description.form-control(type="text",name="description", value = product.description)
                                    .col-sm-offset-2
                                        button.btn.btn-warning(type="submit") Save

                            a.btn.btn-primary(href='/products') Quay lại