extends ../layouts/commit
block content
		#page-wrapper
			.main-page
				.tables
					.panel-body.widget-shadow
						h1 Danh sách sản phẩm
						br
						br  
						a.btn.btn-success.mt-5.mb-5(href="/products/create") Create
								
						table.table.table-hove
							thead
								tr
									th Product Img
									th Product Name
									th Action
							tbody
							each product in products
								tr
									td
										img.border.border-success.rounded-lg(src=product.pro_image, width="72",height ="72")
									td
										p(text-align='center')= product.name
									td
										a.btn.btn-primary(href='/users/'+user._id) View
										span 
										a.btn.btn-warning(href='/users/edits/'+user._id) Edit
										span 
										a.btn.btn-danger(href='/auth/logout',onclick="return confirm('Bạn có muốn đăng xuat không ?')") Delete
						